<%- include("header") -%>
    <!-- Heading -->
    <div class="box" id="heading">
        <h1><%= listTipe %></h1>
    </div>
    
    <div class="box">
        <!-- items -->
        <% for(let i = 0; i < newListItem.length; i++){ %>
            <div class="item">
                <input type="checkbox" />
                <p><%= newListItem[i] %></p>
            </div>
        <% } %>

        <!-- Form -->
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" autofocus placeholder="New Item" autocomplete="off"/>
            <button type="submit" name="list" value="<%= listTipe %>">+</button>
        </form>
    </div>
<%- include("footer") -%>