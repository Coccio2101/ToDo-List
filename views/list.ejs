<%- include("header") -%>
    <!-- Heading -->
    <div class="box" id="heading">
        <h1><%= listTipe %></h1>
    </div>
    
    <div class="box">
        <!-- items -->
        <% newListItem.forEach((record) => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= record._id %>" onchange="this.form.submit()"/>
                    <p><%= record.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTipe %>"></input>
                <input type="hidden" name="itemName" value="<%= record.name %>"></input>
            </form>
        <% }) %>

        <!-- Form -->
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" autofocus placeholder="New Item" autocomplete="off"/>
            <button type="submit" name="list" value="<%= listTipe %>">+</button>
        </form>
    </div>
<%- include("footer") -%>